        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ORÇAMENTO"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="49dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sua renda é de R$ 1412,00"
        android:textAlignment="viewStart"
        android:textSize="15sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="136dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="306dp"
        android:layout_height="78dp"
        app:srcCompat="@drawable/retangulo_br"
        tools:layout_editor_absoluteX="52dp"
        tools:layout_editor_absoluteY="214dp" />

    <LinearLayout
        android:layout_width="233dp"
        android:layout_height="110dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="89dp"
        tools:layout_editor_absoluteY="621dp">

        <Button
            android:id="@+id/buttonProximo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Próximo"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textColorLink="@color/green">
        </Button>

    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="46dp"
        android:layout_height="26dp"
        android:text="VALOR"
        android:textAlignment="center"
        android:textColor="#4CAF50"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="182dp"
        tools:layout_editor_absoluteY="223dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="193dp"
        android:layout_height="43dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#4CAF50"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="109dp"
        tools:layout_editor_absoluteY="249dp"
        tools:text="R$ 1250,00" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="334dp"
        android:layout_height="33dp"
        android:text="Por que o orçamento sujerido é menor do que a minha renda mensal?"
        android:textAlignment="viewStart"
        android:textSize="15sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="310dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="336dp"
        android:layout_height="112dp"
        android:text="Ao criar um orçamento, é importante limitar os gastos a uma parte do salário total para garantir uma gestão finaceira saudável. É uma prática recomendada para assegurar que você tenha uma reserva para poupança, emergências e outros objetivos financeiros."
        android:textAlignment="viewStart"
        android:textSize="15sp"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="372dp" />

</androidx.constraintlayout.widget.ConstraintLayout>